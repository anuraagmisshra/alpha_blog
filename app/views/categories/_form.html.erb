<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <%= render 'shared/error_display', obj: @category%>
            <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
            <div class="form-group row">
                <%= f.label :name, 'Category name', class: "col-12 col-sm-3 col-form-label text-light" %>
                <div class="col-12 col-sm-9">
                    <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category name" %>
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <%= f.submit class: "btn btn-outline-light btn-lg" %>
            </div>
            <% end %>
        </div>
        <div class="text-center mt-3">
            <%= link_to '[ Cancel and return to category listing ]', categories_path, class: "text-info" %>
        </div>
    </div>
</div>