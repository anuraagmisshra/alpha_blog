<h2 class = 'text-center mt-4'>Forgot your password?</h2>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "shadow p-3 mb-3 bg-dark rounded", method: :post }) do |f| %>
        <%= bootstrap_devise_error_messages! %>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-8">
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control shadow rounded' %>
          </div>
        </div>

        <div class="form-group row col-8">
          <%= f.submit 'Reset Password', class: "btn btn-outline-light btn-lg" %>
        </div>
        <%= render 'devise/shared/links' %>
      <% end %>
    </div>
  </div>
</div>
