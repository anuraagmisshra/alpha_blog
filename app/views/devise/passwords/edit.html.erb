<h2 class = 'text-center mt-4'>Change Your Password</h2>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "shadow p-3 mb-3 bg-dark rounded", method: :put }) do |f| %>
        <%= bootstrap_devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group row">
          <%= f.label :password, t('.new_password'), class: "col-2 col-form-label text-light" %>
          <div class="col-8">
            <%= f.password_field :password, autofocus: true, class: 'form-control rounded shadow'  %>
          </div>

          <% if @minimum_password_length %>
            <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
          <% end %>
        </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, t('.confirm_new_password'), class: "col-2 col-form-label text-light" %>
          <div class="col-8">
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control rounded shadow'  %>
          </div>
        </div>

        <div class="form-group row col-8">
          <%= f.submit t('.change_my_password'), class: "btn btn-outline-light btn-lg" %>
        </div>
        <%= render 'devise/shared/links' %>
      <% end %>
    </div>
  </div>
</div>
