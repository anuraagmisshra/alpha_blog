#!/bin/bash
# Local CI testing script

echo "ğŸ§ª Running local CI tests..."

# Test 1: Bundle install
echo "ğŸ“¦ Testing bundle install..."
bundle install || exit 1

# Test 2: Database setup
echo "ğŸ—„ï¸ Testing database setup..."
RAILS_ENV=test bundle exec rails db:create db:migrate || exit 1

# Test 3: JavaScript dependencies
echo "ğŸ“¦ Testing yarn install..."
